@using FinalProjectMain.Models.Entity   
@model User


<div class="container" style="margin-top:100px">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-4 col-xl-4 col-md-6 col-sm-12 border rounded-0">
            <form class="m-3" action="@Url.Action("forgetPasswordSubmit","Home")" method="get">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="email" name="Email" required class="form-control rounded-0" id="exampleInputEmail1" placeholder="Email daxil et">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    <p class="text-danger">@TempData["emaildoesnexist"]</p>
                </div>
                <button type="submit" class="btn btn-danger rounded-0">Daxil Et</button>
            </form>
        </div>
    </div>
</div>
