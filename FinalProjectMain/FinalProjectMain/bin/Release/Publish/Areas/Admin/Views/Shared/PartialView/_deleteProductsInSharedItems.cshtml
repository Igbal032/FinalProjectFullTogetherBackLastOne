@model IEnumerable<FinalProjectMain.Models.Entity.Product>

@foreach (var item in Model)
{
    <div class="col-md-6 col-sm-12 col-xl-4 col-lg-4">
        <div class="card" style="height:600px">
            <figure class="imghvr-shutter-in-out-diag-2">
                <img class="card-img-top" width="100%" src="~/Template/img/newImg/@item.imgPath"
                     alt="Card image cap">
                @if (item.isSold == true)
                {
                    <span class="badge badge-danger" style="    position: absolute !important;right: 25px !important;top: 20px !important;border-radius:0% !important;">
                        Satılıb!
                    </span>
                }
                @if (item.isSold == false)
                {
                    <span class="badge badge-success" style="    position: absolute !important;right: 25px !important;top: 20px !important;border-radius:0% !important;">
                        Satılmayıb!
                    </span>
                }
                <figcaption style="word-break: break-all;">
                    @item.About
                </figcaption>
            </figure>
            <div class="card-body text-center">
                <a href="./itemPage.html"><span>Adı: @item.Name</span></a>
                <h6>Qiymət: @item.Price AZN</h6>
                <p>Hakqında: @item.About</p>
                <p>Paylaşılıb: @item.isConfirm</p>
                <p>Istehsal: @item.Producer.ProducerName</p>
                <p>Sayı və ölçüsü: @item.SizeORCount</p>
            </div>
            <div class="card-footer">
                <div class="icon-part d-flex justify-content-around text-center col-12">
                    <p>Paylaşdı :</p>
                </div>
                <div class="col-12 mt-1 mb-1 d-flex justify-content-around">
                    <button id="deleteButtomInSharedPage" onclick="deleteButtomInSharedPage(@item.Id)" class="btn btn-sm btn-danger">Sil</button>
                    <a href="@Url.Action("Edit","EditProducts", routeValues: new { id = item.Id})" class="btn btn-sm btn-warning">Redakte Et</a>
                    <form action="@Url.Action("LookAtAllİmages","Admin")" method="get">
                        <input id="hiddenID" name="id" type="hidden" value="@item.Id" />
                        <button id="lookAtImages" type="submit" class="btn btn-sm btn-warning">Şəkillər</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}