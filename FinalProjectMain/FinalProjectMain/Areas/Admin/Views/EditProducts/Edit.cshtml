@model FinalProjectMain.Models.Entity.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    var db = new FinalProjectMain.Models.ShoppingDbContext();
    var images = db.imageProducts.Where(w => w.ProductId == Model.Id).ToList();
}


    <div class="container" style="margin-top:100px !important;">
        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="container-fluid">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <label>Adı</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" value="@Model.Name" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Hakqında</label>
                        <div class="col-md-10">
                            <textarea type="text" class="form-control">@Model.About</textarea>

                        </div>
                    </div>

                    <div class="form-group">
                        <label>Qiymət</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" value="@Model.Price" />
                        </div>
                    </div>



                    <div class="form-group">
                        <label>Şəkillər</label>
                        <div class="col-md-10">
                            @foreach (var item in images)
                            {
                                <img src="~/Template/img/newImg/@item.imgPath" width="200px"/>
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>foreach