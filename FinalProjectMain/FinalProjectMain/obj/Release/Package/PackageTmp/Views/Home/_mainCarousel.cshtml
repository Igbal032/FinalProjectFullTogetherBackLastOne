@model IEnumerable <FinalProjectMain.Models.Entity.mainCarousel>
@{ 
    Layout = null;
    int count = 0;
}

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="owl-carousel owl-theme w-75">
                @foreach (var item in Model)
                {
                    count++;
                <div class="item">
                    <a class="text-decoration-none"  href="#"><span id="mainCarouselTitle" class="badge badge-success rounded-0" style="top: 13%;position: absolute;left: 3%;font-size:26px;">Antik Qabların Alışı Və Satışı</span></a>
                    <img height="500px" id="mainCarouselmg" style="object-fit: cover" src="~/Template/img/mainCarousel/@item.imgPath" alt="">
                </div>
                }
            </div>
        </div>
    </div>
