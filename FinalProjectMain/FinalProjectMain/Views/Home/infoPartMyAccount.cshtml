@using FinalProjectMain.Models.Entity
@model User
@section css
    {
    <link href="~/Template/css/info-my-Account.css" rel="stylesheet" />
    <link rel="stylesheet" href="    https://cdn.jsdelivr.net/npm/pretty-checkbox@3.0/dist/pretty-checkbox.min.css">

}

<section class="changeInfoPart mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xl-12 col-lg-12 col-12  text-center forTitle">
                <span class="font-weight-bold">Şəxsi Məlumatlar</span>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-md-12 col-xl-12 col-12 title mt-3 shadow ">
                <form action="@Url.Action("changeMyAccount","Home")" class="p-3">
                    <div class="form-group row mt-4">
                        <label class="col-sm-4 col-form-label">Sosial başlıq</label>
                        <div class="col-sm-8 d-flex">
                            <select name="Gemder">
                                <option value="">Kişi</option>
                                <option value="">Qadın</option>
                            </select>

                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <label for="FirstName" class="col-sm-4 col-form-label">Ad</label>
                        <div class="col-sm-8">
                            <input type="text" placeholder="  Adınızı Daxil Edin.." name="UserName" class="form-control"
                                   id="FirstName" value="@Model.UserName">
                        </div>
                    </div>

                    <div class="form-group row mt-4">
                        <label for="LastName" class="col-sm-4 col-form-label">Soyad</label>
                        <div class="col-sm-8">
                            <input type="text" placeholder="  Soyadınızı Daxil Edin.." name="UserSurname" class="form-control"
                                   id="LastName" value="@Model.UserSurname">
                        </div>
                    </div>

                    <div class="form-group row mt-4">
                        <label for="emailForRegister" class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-8">
                            <input type="text" placeholder="  Email Daxil Edin.." name="Email" class="form-control"
                                   id="emailForRegister" value="@Model.Email">
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <label for="inputPassword" class="col-sm-4 col-form-label">Şifrə</label>
                        <div class="col-sm-8">
                            <div class="input-group-append">
                                <input type="password" class="form-control" id="inputPassword" name="Password"
                                       placeholder="  Şifrənizi Daxil Edin.." value="@Model.Password">
                                <button type="button" class="btn btn-dark btn-sm rounded-0 btnShowPassword btnPass"
                                        id="basic-addon2">
                                    Göstər
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <label for="inputNewPassword" class="col-sm-4 col-form-label">Təkrar Şifrə</label>
                        <div class="col-sm-8">
                            <div class="input-group-append">
                                <input type="password" name="repeatedPassword" class="form-control" id="inputNewPassword"
                                       placeholder=" Yeni Şifrənizi Daxil Edin..">
                                <button type="button"
                                        class="btn btn-sm btn-dark rounded-0 btnShowNewPassword btnPass"
                                        id="basic-addon2">
                                    Göstər
                                </button>
                            </div>
                            <p class="text-danger">@TempData["wrongPassword"]</p>
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <label class="col-sm-4 col-form-label">Doğum Tarixi</label>
                        <div class="col-sm-8">
                            <input type="text" placeholder="  Gün / Ay / İl" data-provide="datepicker"
                                   class="form-control" name="BirtDay" value="@Model.BirthDate">
                            <span class="form-control-comment text-muted">
                                (Məs: 05/31/1970)
                            </span>
                        </div>
                    </div>
                    <div class="form-group row mt-4">
                        <label class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="checkbox" name="Notification" value="@Model.Notification">
                            <span class="form-control-comment text-muted notification">
                                Melumatlardan sizə bildiriş gəsin?
                            </span>
                        </div>
                    </div>
                    <div class="col-12 d-flex justify-content-end w-100">
                        <button type="submit" class="btn btn-md btn-dark d-flex-end">Yadda Saxla</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-2 buttons-part">
            <div class="col-12">
                <a href="@Url.Action("myAccount","Home")" class="btn btn-md btn-dark  back-account">
                    <i class="fas fa-angle-left"></i> Hesabına Geri Dön
                </a>
                <a href="@Url.Action("Index","Home")" class="btn btn-md btn-dark  back-MainPage">Əsas Səhifə</a>
            </div>
        </div>
    </div>
</section>

<section class="carouselForCompany mt-5">
    <div class="container  mt-5">
        <div class="row">
            <div class="owl-carousel">
                <div><img src="~/Template/img/Companies/1.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/2.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/3.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/4.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/5.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/1.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/3.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/5.jpg" alt=""></div>
            </div>
        </div>
    </div>
</section>


@section scripts{

    <script src="~/Template/js/info-myAccount-js.js"></script>

}
