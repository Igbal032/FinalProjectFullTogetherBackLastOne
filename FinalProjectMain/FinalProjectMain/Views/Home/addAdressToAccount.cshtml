@model FinalProjectMain.Models.Entity.addAdressToAccount



<section class="adress-part mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-xl-12 col-lg-12 col-12  text-center header-title-col">
                <span class="font-weight-bold h-title">Yeni Ünvan</span>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12 col-md-12 col-lg-12 col-xl-12 inputs-for-adress-col shadow">
                <form class="mt-4 mb-4" action="@Url.Action("addAdressToAccountSubmit","Home")" method="post">
                    <div class="form-group row Alias-part">
                        <label for="inputAlias" class="col-sm-2 col-form-label">İkinci Ad (Ləqəb)</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputAlias" name="UserSecondName">
                        </div>
                        <label for="" class="col-sm-2 col-form-label up text-muted">Məcburi Olmayan</label>
                    </div>
                    <div class="form-group row FirstName-Part">
                        <label for="inputFirstName" class="col-sm-2 col-form-label">AD</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputFirstName" name="UserName">
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class="text-danger" })
                    <div class="form-group row LastName-Part">
                        <label for="inputLastName" class="col-sm-2 col-form-label">Soyad</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputLastName" name="UserSurname">
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.UserSurname, "", new { @class="text-danger" })
                    <div class="form-group row State-Part">
                        <label for="inputState" class="col-sm-2 col-form-label">Ölkə</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="inputState" name="CountryId">
                                @Html.Action("countryListInAddAdress","Home")
                            </select>
                        </div>
                    </div>
                    <p class="text-danger">@TempData["selectCountry"]</p>
                    @Html.ValidationMessageFor(m => m.CountryId, "", new { @class="text-danger" })
                    <div class="form-group row City-Part">
                        <label for="inputCity" class="col-sm-2 col-form-label">Şəhər</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="City" name="City">
                        </div>
                    </div>
                    <div class="form-group row Adress-Part">
                        <label for="inputAdress" class="col-sm-2 col-form-label">Ünvan</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputAdress" name="Adress">
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Adress, "", new { @class="text-danger"})
                    <div class="form-group row SecondAdress-Part">
                        <label for="inputSecondAdress" class="col-sm-2 col-form-label"> Ünvan - 2 </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="SecondAdress" name="Adress2">
                        </div>
                        <label for="" class="col-sm-2 col-form-label up text-muted">Məcburi Olmayan</label>
                    </div>

                    <div class="form-group row Phone-Part">
                        <label for="inputPhone" class="col-sm-2 col-form-label">Telefon</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="Phone" name="Phone">
                        </div>
                        <label for="" class="col-sm-2 col-form-label up text-muted">Məcburi Olmayan</label>
                    </div>
                    <div class="col-lg-12 col-md-12 col-12 w-100 d-flex justify-content-end button-part">
                        <button type="submit" class="btn btn-primary btn-dark text-uppercase rounded-0">Yadda Saxla</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-2 buttons-part-inadress">
            <div class="col-12">
                <a href="@Url.Action("myAccount","Home")" class="btn btn-md btn-dark  back-account">
                    <i class="fas fa-angle-left"></i> Hesabına
                    Geri Dön
                </a>
                <a href="@Url.Action("Index","Home")" class="btn btn-md btn-dark  back-MainPage">
                    <i class="fas fa-home"></i> Əsas
                    Səhifə
                </a>
            </div>
        </div>
    </div>
</section>


<section class="carouselForCompany mt-5">
    <div class="container  mt-5">
        <div class="row">
            <div class="owl-carousel">
                <div><img src="~/Template/img/Companies/1.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/2.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/3.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/4.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/5.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/1.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/3.jpg" alt=""></div>
                <div><img src="~/Template/img/Companies/5.jpg" alt=""></div>
            </div>
        </div>
    </div>
</section>

