@using FinalProjectMain.Models.Entity
@model Product
@{
    Layout = null;
}

    <div class="card mt-5" style="max-height: max-content">

        <figure class="imghvr-shutter-in-out-diag-2">
            <img class="card-img-top" height="350px" width="" style="object-fit: cover" src="~/Template/img/newImg/@Model.imgPath" alt="Card image cap">
            @if (Model.isSold == true)
            {
                <span class="badge badge-danger">
                    Satılıb!
                </span>
            }
            @if (Model.isSold == false)
            {
                <span class="badge badge-success">
                    Satılmayıb!
                </span>
            }
            <figcaption style="word-break: break-all;">
                @Model.About
            </figcaption>
        </figure>
        <div class="card-body text-center font-weight-bold">
            <form action="@Url.Action("itemPage","Home")" method="get">
                <input type="hidden" name="Id" value="@Model.Id" />
                <button type="submit" class="text-decoration-none btn btn-transparent"><span class="text-danger font-weight-bold">@Model.Name</span></button>
                <h4>@Model.Price AZN</h4>

                <p class="productDescription text-center">
                    @Model.About
                </p>
            </form>
        </div>
        <div class="card-footer">
            <div class="icon-part d-flex justify-content-around text-center">
                <div class="shop bg ">
                    <a class="text-muted icon-link" onclick="clickShopIcon(@Model.Id)">
                        <i class="fas fa-shopping-bag"></i>
                    </a>
                </div>
                <div class="star bg" style="position:relative !important">
                    <a class="text-muted icon-link">
                        @*<i class="fas fa-compress-arrows-alt"></i>*@
                        <i class="far fa-star"></i>
                    </a>
                    <span style="position: absolute;left: 22px;top: 11px;color: black; font-weight: 900;">@Model.starLevel</span>
                </div>
                <div class="wishlist bg">
                    <a class="text-muted icon-link" onclick="clickWishlistt(@Model.Id)"><i class="fas fa-heart"></i></a>
                </div>
                <div class="likeButton bg" style="position:relative !important">
                    <a class="text-muted icon-link" onclick="clickLike(@Model.Id)" style="cursor:pointer"><i class="fas fa-thumbs-up"></i></a>
                    <span class="like_@Model.Id" style="position: absolute;left: 22px;top: 11px;color: yellow; font-weight: 900;">@Model.LikeCount</span>
                </div>
            </div>
        </div>
    </div>



@section scripts{



}