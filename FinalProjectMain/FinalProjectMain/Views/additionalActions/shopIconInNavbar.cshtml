
@{
    Layout = null;
}
@model IEnumerable<FinalProjectMain.Models.Entity.shopList>
<div class="shopping-icon d-flex" id="dropdownMenuButton" data-toggle="dropdown"
     aria-haspopup="true" aria-expanded="false">
    <i class="fas fa-shopping-bag iconI"></i>
    @if (ViewBag.itemCount != null)
    {
        <span class="countForShoppingInNav">@ViewBag.itemCount</span>

    }
    @if (Session[SessionKey.User] != null)
    {
        <div class="dropdown-menu rounded-0">
            <div class="container-fluid" id="idShopIconImNavBar" >

                @foreach (var item in Model)
                {<div class="row mt-2">
                        <div class="col-lg-12 dropdown-into-icon d-flex justify-content-between">

                            <div class="col-md-6 col-xs-6 col-xl-6 col-lg-6 info">
                                <a href="#" class="text-decoration-none text-dark">@item.Product.Name</a>
                            </div>
                            <div class="col-md-2 col-xs-2 col-xl-2 col-lg-2 info">
                                <a href="#" onclick="deleteFromShopNavIcon(@item.Id)" class="text-decoration-none text-danger" style=" width: 100%;
                                       height: 100%;
                                       display: flex;
                                       align-items: center !important;
                                       justify-content: center !important;">
                                    <i class="fas fa-trash w-100" style="font-size:15px; text-shadow: 0 0 6px red !important;
                                        color: white !important; display: flex;
                                        justify-content: center;"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            <div class="row">
                <div class="col-xs-12 col-md-12 col-sm-12 text-center">
                    <a class="text-decoration-none" href="@Url.Action("viewCard","additionalActions")">Göstər</a>
                </div>
            </div>

            </div>

        </div>
    }
</div>

